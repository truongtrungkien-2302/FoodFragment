<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="240dp"
    android:layout_margin="7sp"
    android:background="@drawable/custom_layout_menu2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFoodRecommended"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/steak2" />

    <ImageView
        android:id="@+id/imgFavoriteRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:layout_toRightOf="@id/imgFoodRecommended"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_favorite2_border_24" />

    <TextView
        android:id="@+id/tvNameFoodRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFoodRecommended"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="8sp"
        android:text="Ribeye Steak"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rbStarRecommended"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameFoodRecommended"
        android:layout_marginLeft="20sp"
        android:numStars="5"
        android:progressTint="@color/color_progessBar"
        android:rating="4" />

    <ImageView
        android:id="@+id/imgMoneyRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:src="@drawable/ic_baseline_attach_money_24"
        android:layout_below="@id/rbStarRecommended" />

    <TextView
        android:id="@+id/tvMoneyRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbStarRecommended"
        android:layout_marginTop="0.3sp"
        android:layout_toRightOf="@id/imgMoneyRecommended"
        android:text="12.5"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/btnAddRecommended"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_layout_menu"
            android:src="@drawable/ic_baseline_add_24" />
    </RelativeLayout>

</RelativeLayout>