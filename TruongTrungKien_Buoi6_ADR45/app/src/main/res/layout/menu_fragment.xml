<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15sp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15sp"
                android:src="@drawable/ic_baseline_favorite2_border_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Ribeye Steak"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFood"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/tvName"
                android:layout_centerInParent="true"
                android:src="@drawable/steak2" />

            <RatingBar
                android:id="@+id/rbStar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgFood"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:numStars="5"
                android:progressTint="@color/color_progessBar"
                android:rating="4" />

            <ImageView
                android:id="@+id/imgMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgFood"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="12sp"
                android:layout_toRightOf="@id/rbStar"
                android:src="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgFood"
                android:layout_marginTop="12sp"
                android:layout_toRightOf="@id/imgMoney"
                android:text="12.5"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imgAdd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/imgFood"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/tvMoney"
                android:background="@drawable/custom_layout_menu"
                android:src="@drawable/ic_baseline_add_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="@string/food_description"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10sp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/food_ingredients1" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="@string/food_ingredients2" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>